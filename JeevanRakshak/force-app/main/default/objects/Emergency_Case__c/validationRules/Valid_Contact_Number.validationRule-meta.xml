<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valid_Contact_Number</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
    NOT(REGEX(Patient__r.Contact_Number__c, &quot;^[0-9]{10}$&quot;))
)</errorConditionFormula>
    <errorMessage>Mobile number must be exactly 10 digits.</errorMessage>
</ValidationRule>
